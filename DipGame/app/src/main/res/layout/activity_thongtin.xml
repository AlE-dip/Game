<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thongtin">

    <ImageView
        android:id="@+id/ttimgback"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@android:drawable/ic_menu_revert"/>

    <ScrollView
        android:layout_marginTop="60dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rltt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:padding="10dp"
                android:background="@drawable/ttedt"
                android:layout_marginTop="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:id="@+id/ttedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/ttnut"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/ttedt"
                android:layout_centerHorizontal="true"
                android:src="@drawable/nutchuaan"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <ImageView
                android:layout_marginTop="200dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/ttnut"
                android:id="@+id/ttimgmatna"
                android:src="@drawable/lv5thongtin"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <ImageView
                android:id="@+id/lv5imgcmatlogo"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignStart="@+id/ttimgmatna"
                android:layout_alignLeft="@+id/ttimgmatna"
                android:layout_alignTop="@+id/ttimgmatna"
                android:layout_alignEnd="@+id/ttimgmatna"
                android:layout_alignRight="@+id/ttimgmatna"
                android:layout_alignBottom="@+id/ttimgmatna"
                android:layout_marginStart="78dp"
                android:layout_marginLeft="78dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="42dp"
                android:layout_marginRight="42dp"
                android:layout_marginBottom="85dp" />

            <TextView
                android:id="@+id/tttxtlvl"
                android:textSize="20sp"
                android:text="LVL"
                android:layout_marginTop="100dp"
                android:layout_below="@+id/ttimgmatna"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:textSize="20sp"
                android:text=""
                android:layout_marginTop="100dp"
                android:layout_below="@+id/tttxtlvl"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
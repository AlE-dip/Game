<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ImageView
       android:id="@+id/imglogo"
       android:scaleType="fitXY"
       android:layout_marginTop="100dp"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:src="@drawable/logo"
       android:layout_width="300dp"
       android:layout_height="200dp"/>

    <ImageView
        android:id="@+id/lv5imgci"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/imglogo"
        app:layout_constraintHorizontal_bias="0.614"
        app:layout_constraintLeft_toLeftOf="@+id/imglogo"
        app:layout_constraintRight_toRightOf="@+id/imglogo"
        app:layout_constraintTop_toTopOf="@+id/imglogo"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:id="@+id/imgnutplay"
        android:src="@drawable/nutplay"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imglogo"
        android:layout_width="200dp"
        android:layout_height="150dp"/>

    <ImageView
        android:layout_marginTop="120dp"
        android:scaleType="fitXY"
        android:id="@+id/imgnutthoat"
        android:src="@drawable/nutthoat"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imglogo"
        android:layout_width="200dp"
        android:layout_height="150dp"/>

    <ImageView
        android:layout_marginTop="250dp"
        android:scaleType="fitXY"
        android:id="@+id/imgnutthongtin"
        android:src="@drawable/nutthongtin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imglogo"
        android:layout_width="160dp"
        android:layout_height="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>